@model FaixaViewModel

@{
    ViewData["Title"] = "Remover faixa";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Duracao" class="control-label"></label>
            <input asp-for="Duracao" class="form-control" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Ordem" class="control-label"></label>
            <input asp-for="Ordem" class="form-control" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Album" class="control-label"></label>
            <input asp-for="Album" class="form-control" disabled />
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
