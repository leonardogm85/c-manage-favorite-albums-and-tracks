@model AlbumViewModel

@{
    ViewData["Title"] = "Visualizar álbum";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="AnoLancamento" class="control-label"></label>
            <input asp-for="AnoLancamento" class="form-control" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Artista" class="control-label"></label>
            <input asp-for="Artista" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Atualizar</a>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
