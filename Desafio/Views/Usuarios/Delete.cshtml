@model VisualizarUsuarioViewModel

@{
    ViewData["Title"] = "Remover usuário";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="DataNascimento"></label>
            <input asp-for="DataNascimento" class="form-control" disabled />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Sexo"></label>
            <input asp-for="Sexo" class="form-control" disabled />
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
